<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_vp"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/vp1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="500dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_titleVP"
            android:text="Siap Menonton"
            android:padding="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_descVP"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin fermentum nisi at euismod imperdiet. Nullam molestie mi vel ante dictum sollicitudin"
            android:textColor="@color/white"
            android:padding="10dp"/>


    </LinearLayout>

</RelativeLayout>